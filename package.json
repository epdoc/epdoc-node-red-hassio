{
  "name": "epdoc-node-red-connectivity",
  "version": "0.0.1",
  "description": "Ping connectivity test for Node-RED",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpravetz/epdoc-node-red-connectivity.git"
  },
  "module": "./src/index.ts",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build ./src/index.ts --target node --outdir ./dist && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist && rm -rf docs && echo 'Done.'",
    "coverage": "bun test --coverage",
    "format": "prettier --write 'src/**/*.ts'",
    "docs": "./node_modules/typedoc/bin/typedoc"
  },
  "devDependencies": {
    "bun-types": "^1.0.7",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "prettier": "^3.0.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "epdoc-timeutil": "^2.2.2",
    "epdoc-util": "^0.2.9",
    "eslint": "^8.52.0"
  }
}
